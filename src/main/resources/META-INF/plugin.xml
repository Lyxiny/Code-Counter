<idea-plugin>
    <id>cem.lyxiny.code-counter</id>
    <name>Simple Code Counter</name>
    <vendor email="wotmastera2007@mail.ru">Obmoin</vendor>

    <description><![CDATA[
    Simple plugin that counts lines and characters in selected files or folders.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <actions>
        <!-- 5 разных мест для кнопки -->
        <action id="CodeCounter.Project"
                class="cem.lyxiny.plugin.CodeCounterAction"
                text="Count Lines &amp; Chars (Project)">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>

        <action id="CodeCounter.Editor"
                class="cem.lyxiny.plugin.CodeCounterAction"
                text="Count Lines &amp; Chars (Editor)">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

        <action id="CodeCounter.Tools"
                class="cem.lyxiny.plugin.CodeCounterAction"
                text="Count Lines &amp; Chars">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>

        <action id="CodeCounter.Popup"
                class="cem.lyxiny.plugin.CodeCounterAction"
                text="Count Lines &amp; Chars (Popup)">
            <add-to-group group-id="PopupMenuActionsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>